Program SrednyeNaDiagonali;                           // Оголошення програми
Uses Crt;                                             // Підключення модуля для роботи з екраном

Const N=4;                                            // Визначення розміру квадратного масиву

Var
  A: array[1..N, 1..N] of Integer;                    // Оголошення двовимірного масиву розміром NxN
  i, j: Integer;                                      // Змінні для індексів циклів
  sum: Integer;                                       // Змінна для зберігання суми елементів діагоналі
  average: Real;                                      // Змінна для зберігання середнього арифметичного

Begin
  ClrScr;                                             // Очищення екрана
  sum:=0;                                             // Ініціалізація суми нулем

  Writeln('Введіть елементи масиву ', N, 'x', N, ':'); // Виведення повідомлення про введення елементів
  For i:=1 to N do                                    // Цикл по рядках
    For j:=1 to N do                                  // Цикл по стовпцях
    Begin
      Write('A[', i, ',', j, '] = ');                 // Запит значення конкретного елемента масиву
      Readln(A[i, j]);                                // Зчитування введеного значення
    End;

  Writeln;                                            // Порожній рядок
  Writeln('Масив:');                                  // Виведення заголовка для відображення масиву
  For i:=1 to N do                                    // Цикл по рядках
  Begin
    For j:=1 to N do                                  // Цикл по стовпцях
      Write(A[i, j]:5);                               // Виведення елементів масиву з відступом
    Writeln;                                          // Перехід на новий рядок після кожного рядка масиву
  End;

  For i:=1 to N do                                    // Цикл по діагональних елементах (де i = j)
    sum:=sum+A[i, i];                                 // Додавання елемента до суми

  average:=sum/N;                                     // Обчислення середнього арифметичного

  Writeln;                                            // Порожній рядок
  Writeln('Середнє арифметичне елементів головної діагоналі: ', average:0:2); // Виведення результату

  Readln;                                             // Очікування натискання клавіші перед завершенням
End.                                                  // Кінець програми
